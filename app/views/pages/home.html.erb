<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.7)), url(https://images.unsplash.com/photo-1619317190381-643a6b28d6e6?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1949&q=80); height: 500px;";>
  <div class="container">
    <h1>Rent your caravan today!</h1>
    <p>And enjoy your holiday with maximum freedom</p>
    <div class= "main-form">
      <br>
      <br>
      <div class="title">Find your holiday ride</div>
      <div class="inner-form">
        <div class="input-field first-wrap">
          <input id="search" type="text" placeholder="what are you looking for?">
        </div>
        <div class="input-field second-wrap">
          <input class="datepicker" id="depart" type="text" placeholder="departure date">
        </div>
        <div class="input-field third-wrap">
          <input class="datepicker" id="return" type="text" placeholder="return date">
        </div>
        <div class="input-field fifth-wrap">
          <button class="btn-search" type="button">Search</button>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="state-box">
  <h3>Rent one of these caravans today</h3>
  <button type="button" class="btn-colored">
      <%= link_to "SEE ALL AVAILABLE CARAVANS", caravans_path %>
  </button>
</div>

<div class="container">
  <div class="cards">
    <% @caravans.sample(3).each do |caravan| %>
      <div class="card-caravan">
      <% if caravan.photos.attached? %>
        <%= cl_image_tag caravan.photos.first.key %>
        <% end %>
        <div class="card-caravan-infos">
          <div class="title-description">
            <h2><%= caravan.name %></h2>
            <p><%= caravan.description %></p>
          </div>
          <div>
            <h2 class="card-caravan-pricing">â‚¬ <%= caravan.daily_rate %></h2>
            <a href="/caravans/<%= "#{caravan.id}"%>" class="stretched-link"></a>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="container">
  <h3>Have a caravan sitting in your backyard?</h3>
</div>

<div class="container">
  <button type="button" class="btn-colored">
    <%= link_to "ADD YOUR CARAVAN TODAY", new_caravan_path %>
  </button>
</div>
