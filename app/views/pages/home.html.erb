</div>

<div class="container">
  <h1>Search bar</h1>
</div>

<div class="container">
  <h3>Rent one of these caravans today</h3>
</div>

<div class="container">
  <div class="cards">
    <% @caravans.each do |caravan| %>
      <div class="card-caravan">
        <img src="https://picsum.photos/300/200" alt="caravan image" style="object-fit: cover; object-position: top; height: 200; crop: fill" />
        <div class="card-caravan-infos">
          <div>
            <h2><%= caravan.name %></h2>
            <p><%= caravan.description %></p>
          </div>
          <div>
            <h2 class="card-caravan-pricing">â‚¬ <%= caravan.daily_rate %></h2>
            <p><strong><%= link_to "Delete", caravan_path(caravan), method: :delete, data: { confirm: "Are you sure?" } %></strong></p>
          </div>
          <a href="/caravans/<%= "#{caravan.id}"%>" class="stretched-link"></a>
        </div>
      </div>
    <% end %>
  </div>
</div>

