  </head>

  <body>
    <div class= "body-container">
      <%= render 'shared/navbar' %>
      <%# <p class="notice"><%= notice %></p>
      <%# <p class="alert"><%= alert %></p>
        <%= yield %>
      <%= render 'shared/flashes' %>
      <%= render 'shared/footer' %>
    </div>
  </body>
</html>
