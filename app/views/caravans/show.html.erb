<div id="carouselExampleFade" class="carousel slide carousel-fade" data-ride="carousel">
  <div class="carousel-inner">
    <% @caravan.photos.each do |photo| %>
      <% if photo == @caravan.photos.first %>
        <div class="carousel-item active d-flex justify-content-center">
          <%= cl_image_tag photo.key, class: "d-block image-carousel" %>
        </div>
      <% else %>
        <div class="carousel-item d-flex justify-content-center">
          <%= cl_image_tag photo.key, class: "d-block image-carousel" %>
        </div>
      <% end %>
    <% end %>
  </div>

  <a class="carousel-control-prev" href="#carouselExampleFade" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleFade" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

<div class="container">
  <div class="form-box">
    <div class="description-box">
      <h1> <%= @caravan.name %> </h1>
      <h4> <%= @caravan.description %> </h4>
      <p>Built year: <%= @caravan.built_year %></p>
      <p>Daily rate: â‚¬ <%= number_with_precision(@caravan.daily_rate, precision: 2) %></p>
    </div>
    <div class="booking-box">
    <h5>Make your booking:</h5>
      <div class="show-form">
        <input class="datepicker" id="depart" type="text" placeholder="departure date">
        <input class="datepicker" id="return" type="text" placeholder="return date">
        <input class="comment" type="text" placeholder="leaver your comment here">
        <button class="btn-search" type="button">SUBMIT</button>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <h3 class="btn"><%= link_to "See all caravans", caravans_path %></h3>
</div>
