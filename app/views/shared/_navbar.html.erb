<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div>
      <%= link_to "Caravan Rental.", root_path, class: "nav-link" %>
     <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
       <span class="navbar-toggler-icon"></span>
     </button>
  </div>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
          <form class="form-inline my-2 my-lg-0" id="formNavbar">
            <input class="form-control mr-sm-2" type="search" placeholder="Find a caravan" aria-label="Search">
            <button class="btn btn-outline-light my-2 my-sm-0" id="buttonsearch" type="submit">Search</button>
          </form>
        <% if user_signed_in? %>
          <li class="nav-item dropdown">
            <%= image_tag "https://images.unsplash.com/photo-1458966480358-a0ac42de0a7a?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1050&q=80", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <%= link_to "View My Bookings", "#", class: "dropdown-item" %>
              <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
          <li>
          <a class="btn btn-outline-light" id="login" href="/users/sign_in" role="button">Log in</a>
          </li>
        <% end %>
      </ul>
    </div>
</div>
